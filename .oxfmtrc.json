{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "singleQuote": true,
  "arrowParens": "avoid",
  "sortImports": {
    "groups": ["side_effect", "builtin", "external", "internal", "parent", "index", "sibling"],
    "newlinesBetween": true
  },
  "sortPackageJson": true,
  "sortTailwindcss": {
    "classOrder": "shadcn"
  }
}
