{
  "name": "@ctrl/oxlint-config",
  "version": "1.2.6",
  "description": "",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/oxlint-config",
  "type": "module",
  "exports": {
    "default": "./dist/src/index.js",
    "types": "./dist/src/index.d.ts"
  },
  "files": [
    ".oxlintrc.json"
  ],
  "sideEffects": false,
  "keywords": [],
  "scripts": {
    "lint": "oxlint . && prettier --write .",
    "lint:fix": "oxlint . --fix && prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage --reporter=default --reporter=junit --outputFile=./junit.xml"
  },
  "devDependencies": {
    "oxlint": "^1.18.0",
    "prettier": "^3.6.2"
  },
  "packageManager": "pnpm@10.17.1",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": true,
    "printWidth": 120
  }
}
