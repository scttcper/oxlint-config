{
  "name": "@ctrl/oxlint-config",
  "version": "1.3.1",
  "description": "",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scttcper/oxlint-config.git"
  },
  "type": "module",
  "exports": {
    "default": "./.oxlintrc.json"
  },
  "files": [
    ".oxlintrc.json"
  ],
  "sideEffects": false,
  "keywords": [],
  "scripts": {
    "lint": "oxlint . && prettier --write .",
    "lint:fix": "oxlint . --fix && prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage --reporter=default --reporter=junit --outputFile=./junit.xml"
  },
  "devDependencies": {
    "oxlint": "^1.24.0",
    "prettier": "^3.6.2"
  },
  "packageManager": "pnpm@10.19.0",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": true,
    "printWidth": 120
  }
}
